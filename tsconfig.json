{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@const/*": ["./src/constants/*"],
      "@icons/*": ["./public/icons/*"],
      "@images/*": ["./public/images/*"],
      "@typography/*": ["./src/styles/textStyles/*"],
      "@common/*": ["./src/componets/common/*"],
    }
  },
  "include": ["next-env.d.ts", "types/**/*.ts","**/*.ts", "**/*.tsx", "src/common/modals/menuModal/menuButtons", "sitemap.ts"],
  "exclude": ["node_modules"]
}
